<div class="page">
  <h1>Sign in</h1>

  <%= form_for @conn, @callback_url, fn f -> %>
  <div class="form-group">
    <%= text_input f, :email, placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= password_input f, :password, placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= submit "Login" %>
  </div>
  <% end %>
</div>
